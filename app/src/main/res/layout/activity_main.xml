<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">

    <!-- Statut USB -->
    <TextView
        android:id="@+id/usbStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="USB : Déconnecté"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:layout_marginBottom="8dp" />

    <!-- Statut TCP -->
    <TextView
        android:id="@+id/tcpStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TCP Server: Port 10110"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <!-- IP locale -->
    <TextView
        android:id="@+id/localIpText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IP locale : inconnue"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="4dp" />

    <!-- Nombre de clients connectés -->
    <TextView
        android:id="@+id/clientCountText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clients connectés : 0"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />


    <!-- Logs système -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logs système :"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#DDDDDD"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/logText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:padding="8dp" />
    </ScrollView>

    <!-- Logs NMEA -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Derniers messages NMEA :"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#EEEEEE">

        <TextView
            android:id="@+id/nmeaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:padding="8dp" />
    </ScrollView>

</LinearLayout>
